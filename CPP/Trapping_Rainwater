#include <bits/stdc++.h>
using namespace std;

//trapping rain water

    int trap(int arr[], int n) {
        
        int left[n];
        int right[n];
        
        left[0] = arr[0];
        right[n-1] = arr[n-1];
        
        for(int i = 1; i < n ;i++){
            left[i] = max(left[i-1], arr[i]);
            
            
        }
        
        for(int i = n-2; i >= 0; i--){
            right[i] = max(right[i+1], arr[i]);
        }
        
        int maxWater = 0;
        
        for(int i = 0; i < n; i++){
            maxWater +=  min(left[i], right[i]) - arr[i];
        }
        
        return maxWater;
        
    }

int main() {
     int n;
     cin>>n;

     int arr[n];
     for(int i = 0; i < n; i++){
         cin>>arr[i];
     }

     cout<<trap(arr, n);
}
